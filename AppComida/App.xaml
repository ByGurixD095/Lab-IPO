<Application x:Class="AppComida.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Presentation/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 1. ACTIVOS BÁSICOS -->
                <ResourceDictionary Source="Themes/Icons.xaml"/>

                <!-- 2. ESTILOS DE CONTROLES GENERALES -->
                <ResourceDictionary Source="Themes/ControlStyles.xaml"/>

                <!-- 3. ESTILOS DE DOMINIO -->
                <ResourceDictionary Source="Themes/ProductStyles.xaml"/>
                <ResourceDictionary Source="Themes/ClientStyles.xaml"/>

                <!-- 4. TEMA POR DEFECTO -->
                <ResourceDictionary Source="Themes/TemaClaro.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>