<Page x:Class="AppComida.Presentation.ClientesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      Title="Gestión de Clientes"
      d:DesignHeight="800" d:DesignWidth="1100">

    <Grid Background="{DynamicResource MainBg}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- COLUMNA LISTADO -->
        <Border Grid.Column="0" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource InputBackground}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- Lista -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botón Crear -->
                </Grid.RowDefinitions>

                <!-- Header Lista -->
                <StackPanel Grid.Row="0" Margin="20,25,20,15">
                    <TextBlock Text="CLIENTES" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,15"/>

                    <!-- Buscador -->
                    <Border Background="{DynamicResource InputBackground}" CornerRadius="8" Height="45">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="{StaticResource IconSearch}" Fill="{DynamicResource TextSecondary}" Width="16" Height="16" Stretch="Uniform" HorizontalAlignment="Center"/>
                            <TextBox Grid.Column="1" 
                                     Style="{StaticResource SearchInputStyle}"
                                     Tag="Buscar cliente..." 
                                     BorderThickness="0" 
                                     Background="Transparent" 
                                     VerticalContentAlignment="Center" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource TextPrimary}"
                                     CaretBrush="{DynamicResource BrandColor}"
                                     Padding="0,0,10,0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Listado -->
                <ListBox Grid.Row="1" Margin="10,0" BorderThickness="0" Background="Transparent" 
                         ItemContainerStyle="{StaticResource ClientItemStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <!-- Datos  -->
                    <ListBoxItem>
                        <ListBoxItem.DataContext>
                            <x:Type TypeName="TextBlock"/>
                        </ListBoxItem.DataContext>
                        <system:String>dummy</system:String>
                    </ListBoxItem>
                </ListBox>

                <!-- ListBox Mock Items (Visualización hardcoded para diseño) -->
                <ScrollViewer Grid.Row="1" Padding="15,0">
                    <StackPanel>
                        <!-- Item 1 (Simulación Selección) -->
                        <Border Background="{DynamicResource InputBackground}" CornerRadius="10" Padding="12" BorderThickness="1" BorderBrush="{DynamicResource BrandColor}" Margin="0,0,0,8" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="40" Height="40" Fill="{DynamicResource CardBackground}" Stroke="{DynamicResource BrandColor}" StrokeThickness="1"/>
                                <Path Data="{StaticResource IconUserCircle}" Fill="{DynamicResource BrandColor}" Width="24" Height="24" Stretch="Uniform"/>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="María González" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock Text="maria.gonzalez@email.com" FontSize="11" Foreground="{DynamicResource BrandColor}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Item 2 -->
                        <Border Background="{DynamicResource CardBackground}" CornerRadius="10" Padding="12" Margin="0,0,0,8" Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="40" Height="40" Fill="{DynamicResource InputBackground}"/>
                                <Path Data="{StaticResource IconUserCircle}" Fill="{DynamicResource TextSecondary}" Width="24" Height="24" Stretch="Uniform"/>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Antonio Ruiz" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock Text="antonio@work.com" FontSize="11" Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Botón CRUD: Crear -->
                <Button Grid.Row="2" Margin="20" Height="50" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bdr" Background="{DynamicResource BrandGradient}" CornerRadius="10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#FF6F00"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="{StaticResource IconPlus}" Fill="White" Width="14" Height="14" Margin="0,0,10,0" Stretch="Uniform"/>
                                    <TextBlock Text="Añadir Nuevo Cliente" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- INFORMACIÓN DETALLADA USUARIO -->
        <Grid Grid.Column="1" Background="{DynamicResource MainBg}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header Ficha -->
                <RowDefinition Height="*"/>
                <!-- Contenido Scroll -->
            </Grid.RowDefinitions>

            <!-- HEADER FICHA -->
            <Grid Grid.Row="0" Margin="40,30,40,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar Grande -->
                <Grid Grid.Column="0">
                    <Ellipse Width="80" Height="80" Fill="{DynamicResource CardBackground}" Stroke="{DynamicResource BrandColor}" StrokeThickness="2"/>
                    <Path Data="{StaticResource IconUserCircle}" Fill="{DynamicResource InputBackground}" Width="80" Height="80" Stretch="Uniform"/>
                </Grid>

                <!-- Info Principal -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="María González" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Border Background="{DynamicResource InputBackground}" CornerRadius="4" Padding="8,2" Margin="0,0,10,0">
                            <TextBlock Text="CLIENTE ORO" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource BrandColor}"/>
                        </Border>
                        <Border Background="{DynamicResource InputBackground}" CornerRadius="4" Padding="8,2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠ ALERGIAS" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource ErrorColor}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Botones CRUD: Editar / Borrar -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button ToolTip="Editar Cliente" Margin="0,0,10,0" Style="{StaticResource BtnIconSystem}">
                        <Path Data="{StaticResource IconEdit}" Fill="{DynamicResource TextSecondary}" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                    <Button ToolTip="Eliminar Cliente" Style="{StaticResource BtnIconSystem}">
                        <Path Data="{StaticResource IconTrash}" Fill="{DynamicResource ErrorColor}" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- CONTENIDO CON ACORDEONES -->
            <ScrollViewer Grid.Row="1" Padding="40,20">
                <StackPanel MaxWidth="800" HorizontalAlignment="Left">

                    <!-- ACORDEÓN 1: INFORMACIÓN PERSONAL -->
                    <Expander Style="{StaticResource ModernExpander}">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconUserCircle}" Fill="{DynamicResource BrandColor}" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Información Personal" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                            </StackPanel>
                        </Expander.Header>
                        <Grid Margin="20,0,20,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Teléfono -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="TELÉFONO" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBlock Text="600 123 456" FontSize="14" Foreground="{DynamicResource TextPrimary}"/>
                                <TextBox Text="600 123 456" Style="{StaticResource ModernInput}" Visibility="Collapsed"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="EMAIL" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBlock Text="maria.gonzalez@email.com" FontSize="14" Foreground="{DynamicResource TextPrimary}"/>
                                <TextBox Text="maria.gonzalez@email.com" Style="{StaticResource ModernInput}" Visibility="Collapsed"/>
                            </StackPanel>

                            <!-- Dirección -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                <TextBlock Text="DIRECCIÓN" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBlock Text="C/ Mayor 45, 2A, Ciudad Real" FontSize="14" Foreground="{DynamicResource TextPrimary}"/>
                                <TextBox Text="C/ Mayor 45, 2A, Ciudad Real" Style="{StaticResource ModernInput}" Visibility="Collapsed"/>
                            </StackPanel>

                            <!-- Alergias -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
                                <TextBlock Text="ALERGIAS E INTOLERANCIAS" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource ErrorColor}" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{DynamicResource InputBackground}" CornerRadius="15" Padding="12,6" Margin="0,0,5,0" BorderThickness="1" BorderBrush="{DynamicResource ErrorColor}">
                                        <TextBlock Text="Gluten" Foreground="{DynamicResource ErrorColor}" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{DynamicResource InputBackground}" CornerRadius="15" Padding="12,6" BorderThickness="1" BorderBrush="{DynamicResource ErrorColor}">
                                        <TextBlock Text="Lactosa" Foreground="{DynamicResource ErrorColor}" FontWeight="SemiBold"/>
                                    </Border>
                                    <Button Content="+" Width="30" Height="30" Margin="10,0,0,0" Style="{StaticResource BtnIconSystem}" Visibility="Collapsed"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Expander>

                    <!-- ACORDEÓN 2: FIDELIZACIÓN -->
                    <Expander Style="{StaticResource ModernExpander}">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconStar}" Fill="{DynamicResource BrandColor}" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Programa de Puntos" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                            </StackPanel>
                        </Expander.Header>
                        <Border Background="{DynamicResource InputBackground}" CornerRadius="10" Margin="20,0,20,20" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="SALDO DISPONIBLE" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource BrandColor}" Opacity="0.8"/>
                                    <TextBlock Text="2.150 Pts" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource BrandColor}"/>
                                    <TextBlock Text="Equivale a 21.50€ de descuento" FontSize="12" Foreground="{DynamicResource TextSecondary}" Margin="0,5,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1" VerticalAlignment="Center" Background="{DynamicResource CardBackground}" Foreground="{DynamicResource BrandColor}" 
                                        Content="Canjear Puntos" FontWeight="Bold" Padding="15,8" BorderThickness="0" Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>
                    </Expander>

                    <!-- ACORDEÓN 3: HISTORIAL -->
                    <Expander Style="{StaticResource ModernExpander}">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconHistory}" Fill="{DynamicResource BrandColor}" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Historial de Pedidos" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                            </StackPanel>
                        </Expander.Header>
                        <StackPanel Margin="20,0,20,20">
                            <!-- Cabecera -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="FECHA" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Grid.Column="1" Text="PEDIDO" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Grid.Column="2" Text="IMPORTE" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" TextAlignment="Right"/>
                            </Grid>

                            <!-- Filas -->
                            <Border Background="{DynamicResource InputBackground}" CornerRadius="8" Padding="10" Margin="0,0,0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Ayer, 21:30" Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock Grid.Column="1" Text="#1023" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock Grid.Column="2" Text="24.50€" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" TextAlignment="Right"/>
                                </Grid>
                            </Border>

                            <Border Background="{DynamicResource InputBackground}" CornerRadius="8" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="15 Nov, 14:00" Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock Grid.Column="1" Text="#0992" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock Grid.Column="2" Text="12.00€" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" TextAlignment="Right"/>
                                </Grid>
                            </Border>

                            <Button Content="Ver todo el historial" Background="Transparent" Foreground="{DynamicResource BrandColor}" 
                                    BorderThickness="0" Margin="0,15,0,0" Cursor="Hand" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>