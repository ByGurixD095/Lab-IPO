<Page x:Class="AppComida.Presentation.ClientesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      Title="Gestión de Clientes"
      d:DesignHeight="800" d:DesignWidth="1100">

    <Grid Background="{DynamicResource MainBg}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource InputBackground}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="20,25,20,15">
                    <TextBlock Text="CLIENTES" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,15"/>

                    <Border Background="{DynamicResource InputBackground}" CornerRadius="8" Height="45">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="{StaticResource IconSearch}" Fill="{DynamicResource TextSecondary}" Width="16" Height="16" Stretch="Uniform" HorizontalAlignment="Center"/>
                            <TextBox x:Name="TxtSearch"
                                     Grid.Column="1" 
                                     Style="{StaticResource SearchInputStyle}"
                                     Tag="Buscar cliente..." 
                                     BorderThickness="0" 
                                     Background="Transparent" 
                                     VerticalContentAlignment="Center" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource TextPrimary}"
                                     CaretBrush="{DynamicResource BrandColor}"
                                     Padding="0,0,10,0"
                                     TextChanged="TxtSearch_TextChanged"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <ListBox x:Name="LstClients" Grid.Row="1" Margin="10,0" BorderThickness="0" Background="Transparent" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionChanged="LstClients_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="0,0,0,5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="10" Padding="12" BorderThickness="1" BorderBrush="Transparent">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource InputBackground}"/>
                                                <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource BrandColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource InputBackground}"/>
                                                <Setter TargetName="bd" Property="Opacity" Value="0.7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Width="45" Height="45">
                                    <Ellipse Fill="{DynamicResource TextSecondary}" Opacity="0.1"/>
                                    <Path Data="{StaticResource IconUserCircle}" Fill="{DynamicResource TextSecondary}" Width="22" Height="22" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding NombreCompleto}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                                    <TextBlock Text="{Binding Contacto.Email}" FontSize="11" Foreground="{DynamicResource TextSecondary}" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="2" Margin="20" Height="50" Cursor="Hand" Click="BtnAdd_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bdr" Background="{DynamicResource BrandGradient}" CornerRadius="10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#FF6F00"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="{StaticResource IconPlus}" Fill="White" Width="14" Height="14" Margin="0,0,10,0" Stretch="Uniform"/>
                                    <TextBlock Text="Añadir Nuevo Cliente" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Column="1" x:Name="PanelDetail" Background="{DynamicResource MainBg}" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="40,30,40,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Ellipse Width="90" Height="90" Fill="{DynamicResource BrandColor}" Opacity="0.1"/>
                    <Ellipse Width="90" Height="90" Stroke="{DynamicResource BrandColor}" StrokeThickness="1" Opacity="0.3"/>
                    <Path Data="{StaticResource IconUserCircle}" Fill="{DynamicResource BrandColor}" Width="45" Height="45" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="25,0,0,0">
                    <TextBlock x:Name="TxtNombreHeader" Text="Selecciona un cliente" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>

                    <StackPanel x:Name="PanelEditHeader" Orientation="Vertical" Visibility="Collapsed" VerticalAlignment="Center">

                        <TextBlock Text="NOMBRE Y APELLIDOS" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource BrandColor}" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal">
                            <Grid VerticalAlignment="Bottom">
                                <TextBox x:Name="InputNombre" 
                                         Width="150" 
                                         Height="30" 
                                         Style="{StaticResource ModernInput}" 
                                         Margin="0,0,10,0" 
                                         VerticalContentAlignment="Center"
                                         TextChanged="InputNombre_TextChanged"/>

                                <TextBlock Text="Nombre" IsHitTestVisible="False" Foreground="#999" VerticalAlignment="Center" Margin="8,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=InputNombre}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">

                                <StackPanel x:Name="LblErrorNombre" Orientation="Horizontal" Margin="0,0,0,4" Visibility="Collapsed" HorizontalAlignment="Left">
                                    <TextBlock Text="⚠ Campo obligatorio" Foreground="#D32F2F" FontSize="10" FontWeight="Bold"/>
                                </StackPanel>

                                <Grid>
                                    <TextBox x:Name="InputApellidos" Width="200" Height="30" Style="{StaticResource ModernInput}" VerticalContentAlignment="Center"/>
                                    <TextBlock Text="Apellidos" IsHitTestVisible="False" Foreground="#999" VerticalAlignment="Center" Margin="8,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=InputApellidos}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </StackPanel>

                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Border x:Name="BadgeNivel" Background="{DynamicResource InputBackground}" CornerRadius="6" Padding="10,4" Margin="0,0,10,0">
                            <TextBlock x:Name="TxtNivel" Text="NIVEL" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource BrandColor}"/>
                        </Border>

                        <Border x:Name="BadgeAlergias" Background="#FFF8F8" BorderBrush="{DynamicResource ErrorColor}" BorderThickness="1" CornerRadius="6" Padding="10,4" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Path Data="{StaticResource IconAlert}" Fill="{DynamicResource ErrorColor}" Width="12" Height="12" Stretch="Uniform" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="ALERGIAS" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource ErrorColor}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button x:Name="BtnEdit" ToolTip="Editar Cliente" Margin="0,0,10,0" Style="{StaticResource BtnIconSystem}" Click="BtnEdit_Click">
                        <Path Data="{StaticResource IconEdit}" Fill="{DynamicResource TextSecondary}" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                    <Button x:Name="BtnDelete" ToolTip="Eliminar Cliente" Style="{StaticResource BtnIconSystem}" Click="BtnDelete_Click">
                        <Path Data="{StaticResource IconTrash}" Fill="{DynamicResource ErrorColor}" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="40,20,40,50" HorizontalAlignment="Stretch">

                    <Expander Style="{StaticResource ModernExpander}" IsExpanded="True" HorizontalAlignment="Stretch">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconUserCircle}" Fill="{DynamicResource BrandColor}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                                <TextBlock Text="Información Personal" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                            </StackPanel>
                        </Expander.Header>
                        <Grid Margin="20,0,20,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="TELÉFONO" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="TxtTelefono" Text="..." FontSize="14" Foreground="{DynamicResource TextPrimary}"/>
                                <TextBox x:Name="InputTelefono" Style="{StaticResource ModernInput}" Visibility="Collapsed"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="EMAIL" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="TxtEmail" Text="..." FontSize="14" Foreground="{DynamicResource TextPrimary}"/>
                                <TextBox x:Name="InputEmail" Style="{StaticResource ModernInput}" Visibility="Collapsed"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                <TextBlock Text="DIRECCIÓN" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="TxtDireccion" Text="..." FontSize="14" Foreground="{DynamicResource TextPrimary}" TextWrapping="Wrap"/>
                                <TextBox x:Name="InputDireccion" Style="{StaticResource ModernInput}" Visibility="Collapsed"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
                                <TextBlock Text="ALERGIAS E INTOLERANCIAS" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource ErrorColor}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="TxtAlergias" Text="Ninguna" FontSize="14" Foreground="{DynamicResource TextPrimary}" TextWrapping="Wrap"/>
                                <TextBox x:Name="InputAlergias" Style="{StaticResource ModernInput}" Visibility="Collapsed" ToolTip="Separar por comas"/>
                            </StackPanel>
                        </Grid>
                    </Expander>

                    <Expander Style="{StaticResource ModernExpander}" IsExpanded="True" HorizontalAlignment="Stretch">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconStar}" Fill="{DynamicResource BrandColor}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                                <TextBlock Text="Programa de Puntos" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                            </StackPanel>
                        </Expander.Header>
                        <Border Background="{DynamicResource InputBackground}" CornerRadius="10" Margin="20,0,20,20" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="SALDO DISPONIBLE" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource BrandColor}" Opacity="0.8"/>

                                    <TextBlock x:Name="TxtPuntos" Text="0 Pts" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource BrandColor}"/>

                                    <TextBox x:Name="InputPuntos" Width="100" Height="40" Style="{StaticResource ModernInput}" 
                                             Visibility="Collapsed" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>

                                    <TextBlock x:Name="TxtPuntosCanjeados" Text="Canjeados: 0" FontSize="12" Foreground="#888" Margin="0,5,0,0"/>

                                    <TextBlock Text="Equivale a descuentos futuros" FontSize="12" Foreground="{DynamicResource TextSecondary}" Margin="0,5,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="1" VerticalAlignment="Center" Background="{DynamicResource CardBackground}" Foreground="{DynamicResource BrandColor}" 
                                        Content="Canjear Puntos" FontWeight="Bold" Padding="15,8" BorderThickness="0" Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>
                    </Expander>

                    <Expander Style="{StaticResource ModernExpander}" HorizontalAlignment="Stretch">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconHistory}" Fill="{DynamicResource BrandColor}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                                <TextBlock Text="Historial de Pedidos" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" FontSize="14"/>
                            </StackPanel>
                        </Expander.Header>
                        <StackPanel Margin="20,0,20,20">
                            <TextBlock Text="No hay pedidos recientes." Foreground="{DynamicResource TextSecondary}" FontStyle="Italic" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Expander>

                    <StackPanel x:Name="PanelActions" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Visibility="Collapsed">
                        <Button Content="Cancelar" Style="{StaticResource BtnSecondaryStyle}" Click="BtnCancel_Click" Margin="0,0,10,0"/>
                        <Button Content="Guardar Cambios" Style="{StaticResource BtnPrimaryStyle}" Click="BtnSave_Click"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>