<Page x:Class="AppComida.Presentation.PedidosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Gestión de Pedidos"
      d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{DynamicResource MainBg}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <!-- Panel de Detalle (Auto-ajustable) -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Table Head -->
            <RowDefinition Height="*"/>
            <!-- List -->
        </Grid.RowDefinitions>

        <!-- ========================================================= -->
        <!-- COLUMNA IZQUIERDA: LISTADO -->
        <!-- ========================================================= -->

        <!-- 1. HEADER (Botón Nuevo y Filtros) -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="30,30,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Botón Nuevo Pedido -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Button Cursor="Hand" Click="BtnAddOrder_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bdr" Background="{DynamicResource BrandGradient}" CornerRadius="6" Padding="15,10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#FF6F00"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="{StaticResource IconPlus}" Fill="White" Width="14" Height="14" Margin="0,0,10,0" Stretch="Uniform"/>
                                    <TextBlock Text="Nuevo Pedido" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Buscador y Filtros -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBox x:Name="TxtSearch" 
                         Style="{StaticResource ModernInput}" 
                         KeyUp="TxtSearch_KeyUp"
                         Width="250" 
                         Tag="Buscar pedido..."
                         Margin="0,0,15,0"/>

                <Button Content="Filtrar" Click="BtnFilter_Click" Style="{StaticResource BtnSecondaryStyle}" Margin="0,0,10,0"/>

                <Button x:Name="BtnClear" ToolTip="Limpiar filtros" Click="BtnClear_Click" Style="{StaticResource BtnIconSystem}">
                    <Path Data="{StaticResource IconClose}" Fill="{DynamicResource TextSecondary}" Width="16" Height="16" Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 2. TABLE HEADER -->
        <Border Grid.Row="1" Grid.Column="0" Margin="30,0,30,10" Padding="0,0,20,10" BorderBrush="{DynamicResource InputBackground}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ID" Style="{StaticResource TableHeaderTextStyle}" Margin="15,0,0,0"/>
                <TextBlock Grid.Column="1" Text="CLIENTE" Style="{StaticResource TableHeaderTextStyle}"/>
                <TextBlock Grid.Column="2" Text="ENTREGA" Style="{StaticResource TableHeaderTextStyle}"/>
                <TextBlock Grid.Column="3" Text="HORA" Style="{StaticResource TableHeaderTextStyle}"/>
                <TextBlock Grid.Column="4" Text="ESTADO" Style="{StaticResource TableHeaderTextStyle}"/>
                <TextBlock Grid.Column="5" Text="TOTAL" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- 3. LISTADO DE PEDIDOS -->
        <ListBox Grid.Row="2" Grid.Column="0"
                 x:Name="OrderList"
                 Margin="30,0,30,30"
                 Background="Transparent"
                 BorderThickness="0"
                 ItemContainerStyle="{StaticResource OrderListItemStyle}"
                 ItemTemplate="{StaticResource OrderRowTemplate}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 SelectionChanged="OrderList_SelectionChanged">
        </ListBox>

        <!-- ========================================================= -->
        <!-- COLUMNA DERECHA: PANEL DE DETALLE Y EDICIÓN -->
        <!-- ========================================================= -->
        <Border x:Name="PanelDetail" 
                Grid.Column="1" Grid.Row="0" Grid.RowSpan="3"
                Width="400"
                Background="White" 
                BorderBrush="{DynamicResource InputBackground}" 
                BorderThickness="1,0,0,0"
                Visibility="Collapsed">
            <!-- Oculto inicialmente -->

            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header Detalle -->
                    <RowDefinition Height="*"/>
                    <!-- Contenido Scroll -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer Acciones -->
                </Grid.RowDefinitions>

                <!-- HEADER PANEL -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="DETALLE DEL PEDIDO" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtDetailId" Text="#0000" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource BrandColor}"/>
                        </StackPanel>
                        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Click="BtnCloseDetail_Click" Style="{StaticResource BtnIconSystem}">
                            <Path Data="{StaticResource IconClose}" Fill="{DynamicResource TextSecondary}" Width="14" Height="14" Stretch="Uniform"/>
                        </Button>
                    </Grid>
                    <Separator Margin="0,15,0,0" Background="{DynamicResource InputBackground}"/>
                </StackPanel>

                <!-- CONTENIDO EDITABLE -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- ESTADO -->
                        <TextBlock Text="ESTADO ACTUAL" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CmbDetailStatus" Height="40" Margin="0,0,0,20" FontSize="14">
                            <ComboBoxItem Content="Pendiente"/>
                            <ComboBoxItem Content="En Cocina"/>
                            <ComboBoxItem Content="Entregado"/>
                        </ComboBox>

                        <!-- TIPO ENTREGA -->
                        <TextBlock Text="TIPO DE ENTREGA" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CmbDetailDelivery" Height="40" Margin="0,0,0,20" FontSize="14">
                            <ComboBoxItem Content="Mesa 1"/>
                            <ComboBoxItem Content="Mesa 2"/>
                            <ComboBoxItem Content="Mesa 3"/>
                            <ComboBoxItem Content="Mesa 4"/>
                            <ComboBoxItem Content="Mesa 5"/>
                            <ComboBoxItem Content="Mesa VIP"/>
                            <ComboBoxItem Content="Domicilio"/>
                            <ComboBoxItem Content="Recoger"/>
                        </ComboBox>

                        <!-- CLIENTE (Solo lectura) -->
                        <TextBlock Text="CLIENTE" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource InputBackground}" CornerRadius="8" Padding="12" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock x:Name="TxtDetailClientName" Text="Nombre Cliente" FontWeight="Bold" FontSize="14"/>
                                <TextBlock x:Name="TxtDetailClientId" Text="ID: C-0000" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>
                            </StackPanel>
                        </Border>

                        <!-- ITEMS DEL PEDIDO -->
                        <TextBlock Text="PRODUCTOS" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,8"/>
                        <Border BorderBrush="{DynamicResource InputBackground}" BorderThickness="1" CornerRadius="8">
                            <ListBox x:Name="LstDetailItems" BorderThickness="0" Background="Transparent" MaxHeight="250">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10,0"/>

                                            <!-- Botón Eliminar Item -->
                                            <Button Grid.Column="1" Click="BtnDeleteItem_Click" Tag="{Binding}" Style="{StaticResource BtnIconSystem}" Margin="5,0,10,0">
                                                <Path Data="{StaticResource IconTrash}" Fill="#EF5350" Width="12" Height="12" Stretch="Uniform"/>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- NUEVO BOTÓN AÑADIR PRODUCTO -->
                        <Button Content="+ Añadir Producto" 
                                Click="BtnAddItem_Click" 
                                Margin="0,10,0,0" 
                                Height="30" 
                                Background="#E8F5E9" 
                                Foreground="#2E7D32" 
                                BorderThickness="0" 
                                FontWeight="SemiBold" 
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </StackPanel>
                </ScrollViewer>

                <!-- FOOTER: TOTAL Y BOTONES -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <DockPanel LastChildFill="False" Margin="0,0,0,15">
                        <TextBlock Text="TOTAL ESTIMADO" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondary}"/>
                        <TextBlock x:Name="TxtDetailTotal" Text="0,00 €" FontSize="22" FontWeight="ExtraBold" Foreground="{DynamicResource BrandColor}" DockPanel.Dock="Right"/>
                    </DockPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Eliminar" Background="#FFEBEE" Foreground="#D32F2F" BorderThickness="0" FontWeight="Bold" Height="45" Click="BtnDeleteOrder_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Grid.Column="2" Content="Guardar" Style="{StaticResource BtnPrimaryStyle}" Height="45" Click="BtnSaveDetail_Click"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Page>