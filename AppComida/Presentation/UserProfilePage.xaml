<Page x:Class="AppComida.Presentation.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="UserProfilePage"
      d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Background="{DynamicResource MainBg}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-50,0,0">

            <Border Background="{DynamicResource CardBackground}" 
                    CornerRadius="24" 
                    Width="850"
                    Padding="40,100,40,100"
                    Margin="0,60,0,0">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="40" ShadowDepth="10" Opacity="0.05" Color="Black"/>
                </Border.Effect>

                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="TxtUsername" Text="@usuario" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock x:Name="TxtFirstName" Text="Nombre" FontSize="32" FontWeight="Light" Foreground="{DynamicResource TextPrimary}"/>
                        <TextBlock x:Name="TxtLastName" Text="Apellido" FontSize="32" FontWeight="ExtraBold" Foreground="{DynamicResource TextPrimary}" Margin="8,0,0,0"/>
                    </StackPanel>

                    <Border Background="{DynamicResource BrandColor}" CornerRadius="12" Padding="15,6" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock x:Name="TxtRole" Text="Administrador" Foreground="White" FontWeight="Bold" FontSize="12"/>
                    </Border>

                    <TextBlock x:Name="TxtEmail" Text="usuario@email.com" FontSize="16" Foreground="{DynamicResource BrandColor}" HorizontalAlignment="Center" Margin="0,0,0,35"/>

                    <Border Background="{DynamicResource InputBackground}" CornerRadius="12" Padding="20,15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                  Fill="{DynamicResource TextSecondary}" Height="24" Width="24" Stretch="Uniform" Margin="0,0,15,0"/>
                            <StackPanel>
                                <TextBlock Text="Último acceso" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock x:Name="TxtLastAccess" Text="Hoy, 09:41 AM" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
                <Ellipse Width="120" Height="120" Fill="{DynamicResource InputBackground}"/>

                <Ellipse Width="160" Height="160" Stroke="{DynamicResource MainBg}" StrokeThickness="6">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.1" Color="Black"/>
                    </Ellipse.Effect>
                    <Ellipse.Fill>
                        <ImageBrush x:Name="ProfileImageBrush" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>

        </Grid>
    </Grid>
</Page>