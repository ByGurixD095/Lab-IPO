<Window x:Class="AppComida.Presentation.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmación" Height="250" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        MouseDown="Window_MouseDown">

    <Border Background="#F9FAFB" 
            CornerRadius="12" 
            BorderBrush="White" 
            BorderThickness="1">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="10" Opacity="0.15" Color="Black"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- SIMBOLO VENTANA -->
            <Path Grid.Row="0" 
                  x:Name="IconPath"
                  Data="M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z" 
                  Fill="#FF6F00" 
                  Height="32" Width="32" 
                  Stretch="Uniform" 
                  HorizontalAlignment="Center"
                  Margin="0,10,0,10"/>

            <!-- TITULO -->
            <TextBlock Grid.Row="1" 
                       x:Name="TxtTitle" 
                       Text="Confirmación" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#37474F" 
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>

            <!-- MENSAJE -->
            <TextBlock Grid.Row="2" 
                       x:Name="TxtMessage" 
                       Text="Mensaje de confirmación..." 
                       TextWrapping="Wrap" 
                       FontSize="14" 
                       Foreground="#546E7A" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       TextAlignment="Center"
                       Margin="20,10"/>

            <!-- BOTONES CANCELAR Y CONFIRMAR -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Content="CANCELAR" Click="BtnCancel_Click" Cursor="Hand"
                        Foreground="#78909C" Background="Transparent" FontWeight="Bold" Margin="0,0,15,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" Padding="20,10" CornerRadius="6" BorderBrush="#CFD8DC" BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="CONFIRMAR" Click="BtnConfirm_Click" Cursor="Hand"
                        Foreground="White" FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Padding="25,10" CornerRadius="6" Background="#FF6F00">
                                <ContentPresenter HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>