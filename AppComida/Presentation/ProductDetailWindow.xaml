<Window x:Class="AppComida.Presentation.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Detalle Producto" Height="650" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        MouseDown="Window_MouseDown">

    <Border Background="{DynamicResource CardBackground}" CornerRadius="20" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.2" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Border CornerRadius="20,20,0,0" ClipToBounds="True" Background="#EEEEEE">
                    <Grid>
                        <Image x:Name="ImgProducto" Stretch="UniformToFill"/>
                        <Grid x:Name="PanelEditImage" Visibility="Collapsed" VerticalAlignment="Bottom" Background="#CC000000">
                            <StackPanel Margin="15,10">
                                <TextBlock Text="URL de la Imagen:" Foreground="White" FontSize="10"/>
                                <TextBox x:Name="InputImage" Background="Transparent" Foreground="White" BorderThickness="0,0,0,1" BorderBrush="White" Text="http://..."/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <Button Style="{StaticResource BtnCloseStyle}" Click="BtnCerrar_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0"/>
            </Grid>

            <Grid Grid.Row="1" Margin="30,20,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Border x:Name="PillCategoria" Background="{DynamicResource InputBackground}" CornerRadius="12" Padding="12,4">
                        <TextBlock x:Name="TxtCategoria" Text="Categoría" Foreground="{DynamicResource BrandColor}" FontWeight="Bold" FontSize="12"/>
                    </Border>

                    <StackPanel x:Name="PanelEditCategoria" Orientation="Horizontal" Visibility="Collapsed">
                        <ComboBox x:Name="ComboCategory" Width="120" Margin="0,0,10,0" SelectedIndex="0">
                            <ComboBoxItem Content="Platos"/>
                            <ComboBoxItem Content="Entrantes"/>
                            <ComboBoxItem Content="Postres"/>
                            <ComboBoxItem Content="Bebidas"/>
                        </ComboBox>
                        <TextBox x:Name="InputSubCategory" Width="120" Style="{StaticResource InputUnderlineStyle}" Height="30" Padding="0" Text="Subcategoría"/>
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" x:Name="TxtNombre" Text="Nombre del Producto" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" TextWrapping="Wrap" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" x:Name="TxtPrecio" Text="0.00€" FontSize="24" FontWeight="ExtraBold" Foreground="{DynamicResource BrandColor}" VerticalAlignment="Center"/>

                    <TextBox Grid.Column="0" x:Name="InputName" Style="{StaticResource InputUnderlineStyle}" Height="35" FontSize="18" FontWeight="Bold" Visibility="Collapsed" Margin="0,0,10,0"/>
                    <StackPanel Grid.Column="1" x:Name="PanelEditPrice" Orientation="Horizontal" Visibility="Collapsed">
                        <TextBox x:Name="InputPrice" Style="{StaticResource InputUnderlineStyle}" Height="35" FontSize="18" FontWeight="Bold" Width="70" TextAlignment="Right"/>
                        <TextBlock Text="€" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>

                <TextBlock Grid.Row="2" Text="INGREDIENTES" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="3" x:Name="TxtIngredientes" Text="Lista de ingredientes..." FontSize="14" Foreground="{DynamicResource TextPrimary}" TextWrapping="Wrap" LineHeight="20" Margin="0,0,0,20"/>

                <TextBox Grid.Row="3" x:Name="InputIngredientes" Style="{StaticResource InputUnderlineStyle}" Height="60" Padding="0" VerticalContentAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True" Visibility="Collapsed" Margin="0,0,0,20"/>

                <TextBlock Grid.Row="4" Text="ALÉRGENOS" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,8"/>

                <ItemsControl Grid.Row="5" x:Name="ListAlergenos">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource InputBackground}" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                <TextBlock Text="{Binding}" Foreground="{DynamicResource TextSecondary}" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBox Grid.Row="5" x:Name="InputAlergenos" Style="{StaticResource InputUnderlineStyle}" Height="35" Padding="0" Visibility="Collapsed" ToolTip="Separar por comas (ej: Gluten, Huevo)"/>

                <Grid Grid.Row="6" Margin="0,20,0,0" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" x:Name="BtnMainAction" Click="BtnMainAction_Click" Style="{StaticResource BtnPrimaryStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path x:Name="iconMain" Data="{StaticResource IconPencil}" Fill="White" Width="14" Height="14" Margin="0,0,8,0" Stretch="Uniform"/>
                            <TextBlock x:Name="txtMain" Text="Editar Producto"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="2" x:Name="BtnSecondaryAction" Click="BtnSecondaryAction_Click" Style="{StaticResource BtnSecondaryStyle}">
                        <Path x:Name="iconSecondary" Data="{StaticResource IconTrash}" Fill="{DynamicResource ErrorColor}" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>