<Page x:Class="AppComida.Presentation.ProductosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ProductosPage"
      d:DesignHeight="700" d:DesignWidth="1000">

    <Page.Resources>
        <!-- Icono de 3 puntos (Opciones) -->
        <Geometry x:Key="IconDotsHorizontal">M16,12A2,2 0 0,1 18,10A2,2 0 0,1 20,12A2,2 0 0,1 18,14A2,2 0 0,1 16,12M10,12A2,2 0 0,1 12,10A2,2 0 0,1 14,12A2,2 0 0,1 12,14A2,2 0 0,1 10,12M4,12A2,2 0 0,1 6,10A2,2 0 0,1 8,12A2,2 0 0,1 6,14A2,2 0 0,1 4,12Z</Geometry>

        <!-- ESTILO 1: PÍLDORAS MODERNAS (Categorías Principales) -->
        <Style x:Key="CatPillStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="20" Padding="24,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource InputBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource TextPrimary}"/>
                                <Setter Property="Foreground" Value="{DynamicResource CardBackground}"/>
                                <Setter TargetName="bdr" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO 2: CHIPS DE FILTRO (Subcategorías) -->
        <Style x:Key="SubCatChipStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" BorderBrush="{DynamicResource InputBackground}" BorderThickness="1" CornerRadius="12" Padding="16,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource InputBackground}"/>
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{DynamicResource BrandColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrandColor}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO BOTÓN DE GESTIÓN (3 Puntos) -->
        <Style x:Key="BtnManageStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="15" Width="30" Height="30">
                            <Path Data="{StaticResource IconDotsHorizontal}" Fill="{TemplateBinding Foreground}" Stretch="Uniform" Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource InputBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrandColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Background="{DynamicResource MainBg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ZONA DE FILTROS SUPERIOR -->
        <StackPanel Grid.Row="0" Margin="30,30,30,10">

            <!-- Nivel 1: Categorías Principales -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <RadioButton Content="Entrantes" Style="{StaticResource CatPillStyle}" GroupName="MainCat"/>
                <RadioButton Content="Platos" Style="{StaticResource CatPillStyle}" GroupName="MainCat" IsChecked="True"/>
                <RadioButton Content="Postres" Style="{StaticResource CatPillStyle}" GroupName="MainCat"/>
                <RadioButton Content="Bebidas" Style="{StaticResource CatPillStyle}" GroupName="MainCat"/>
            </StackPanel>

            <!-- Nivel 2: Subcategorías -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton Content="Todo" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat" IsChecked="True"/>
                <RadioButton Content="Carnes" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                <RadioButton Content="Pescados" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                <RadioButton Content="Arroces" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                <RadioButton Content="Pastas" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                <RadioButton Content="Vegano" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
            </StackPanel>

            <Separator Background="{DynamicResource InputBackground}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- ZONA DE PRODUCTOS (GRID) -->
        <!-- Padding izquierdo reducido a 15 para ganar espacio -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15,10,0,30">
            <ItemsControl x:Name="ProductList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- AJUSTE CLAVE: Width 205, Margin Right 12 -->
                        <Border Background="{DynamicResource CardBackground}" 
                                Width="205" Height="260"
                                CornerRadius="16" Margin="0,0,12,20"
                                BorderThickness="1" BorderBrush="Transparent">

                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.05" Color="Black"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Imagen del producto -->
                                <Border Grid.Row="0" CornerRadius="16,16,0,0" ClipToBounds="True" Background="#EEEEEE">
                                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                                </Border>

                                <!-- Información -->
                                <Grid Grid.Row="1" Margin="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Título -->
                                    <TextBlock Grid.Row="0" Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextPrimary}" TextTrimming="CharacterEllipsis"/>

                                    <!-- Ingredientes -->
                                    <TextBlock Grid.Row="1" Text="{Binding Ingredients}" FontSize="11" Foreground="{DynamicResource TextSecondary}" 
                                               TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" VerticalAlignment="Top"/>

                                    <!-- Footer: Precio y Botón Gestión -->
                                    <Grid Grid.Row="2" VerticalAlignment="Bottom">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Price}" FontWeight="ExtraBold" FontSize="16" Foreground="{DynamicResource BrandColor}"/>
                                            <TextBlock Text="€" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource BrandColor}" Margin="2,0,0,0"/>
                                        </StackPanel>

                                        <!-- Botón de Gestión -->
                                        <Button Style="{StaticResource BtnManageStyle}" HorizontalAlignment="Right" Click="BtnGestionar_Click" Tag="{Binding Id}">
                                            <Button.ToolTip>
                                                <ToolTip Content="Editar / Borrar Producto"/>
                                            </Button.ToolTip>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>