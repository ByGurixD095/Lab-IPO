<Page x:Class="AppComida.Presentation.ProductosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ProductosPage"
      d:DesignHeight="700" d:DesignWidth="1000">

    <Page.Resources>
        <!-- Iconos -->
        <Geometry x:Key="IconDotsHorizontal">M16,12A2,2 0 0,1 18,10A2,2 0 0,1 20,12A2,2 0 0,1 18,14A2,2 0 0,1 16,12M10,12A2,2 0 0,1 12,10A2,2 0 0,1 14,12A2,2 0 0,1 12,14A2,2 0 0,1 10,12M4,12A2,2 0 0,1 6,10A2,2 0 0,1 8,12A2,2 0 0,1 6,14A2,2 0 0,1 4,12Z</Geometry>
        <Geometry x:Key="IconEye">M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z</Geometry>
        <Geometry x:Key="IconPencil">M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z</Geometry>
        <Geometry x:Key="IconTrash">M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z</Geometry>
        <Geometry x:Key="IconPlus">M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z</Geometry>

        <Style x:Key="CatPillStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="20" Padding="24,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource InputBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource TextPrimary}"/>
                                <Setter Property="Foreground" Value="{DynamicResource CardBackground}"/>
                                <Setter TargetName="bdr" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubCatChipStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" BorderBrush="{DynamicResource InputBackground}" BorderThickness="1" CornerRadius="12" Padding="16,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource InputBackground}"/>
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{DynamicResource BrandColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrandColor}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnManageStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="15" Width="30" Height="30">
                            <Path Data="{StaticResource IconDotsHorizontal}" Fill="{TemplateBinding Foreground}" Stretch="Uniform" Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource InputBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrandColor}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{DynamicResource InputBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrandColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MobileContextMenuStyle" TargetType="{x:Type ContextMenu}">
            <Setter Property="Background" Value="#F7F9FC"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContextMenu}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="12" Padding="5">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MobileMenuItemStyle" TargetType="{x:Type MenuItem}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" ContentSource="Icon" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,15,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#263238"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{DynamicResource MainBg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ZONA SUPERIOR: FILTROS + BOTÓN AÑADIR -->
        <Grid Grid.Row="0" Margin="30,30,30,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Filtros -->
                <ColumnDefinition Width="Auto"/>
                <!-- Botón Añadir -->
            </Grid.ColumnDefinitions>

            <!-- COLUMNA 0: Filtros -->
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <RadioButton Content="Entrantes" Tag="Entrantes" Checked="Filtro_Checked" Style="{StaticResource CatPillStyle}" GroupName="MainCat"/>
                    <RadioButton Content="Platos" Tag="Platos" Checked="Filtro_Checked" Style="{StaticResource CatPillStyle}" GroupName="MainCat" IsChecked="True"/>
                    <RadioButton Content="Postres" Tag="Postres" Checked="Filtro_Checked" Style="{StaticResource CatPillStyle}" GroupName="MainCat"/>
                    <RadioButton Content="Bebidas" Tag="Bebidas" Checked="Filtro_Checked" Style="{StaticResource CatPillStyle}" GroupName="MainCat"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton Content="Todo" Tag="Todo" Checked="Filtro_Checked" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat" IsChecked="True"/>
                    <RadioButton Content="Carnes" Tag="Carnes" Checked="Filtro_Checked" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                    <RadioButton Content="Pescados" Tag="Pescados" Checked="Filtro_Checked" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                    <RadioButton Content="Arroces" Tag="Arroces" Checked="Filtro_Checked" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                    <RadioButton Content="Pastas" Tag="Pastas" Checked="Filtro_Checked" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                    <RadioButton Content="Vegano" Tag="Vegano" Checked="Filtro_Checked" Style="{StaticResource SubCatChipStyle}" GroupName="SubCat"/>
                </StackPanel>
            </StackPanel>

            <!-- COLUMNA 1: Botón Añadir -->
            <Button Grid.Column="1" VerticalAlignment="Top" Margin="0,5,0,0" Click="BtnAnadir_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{DynamicResource BrandColor}" CornerRadius="12" Padding="20,12">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="#FF6F00"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconPlus}" Fill="White" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Nuevo Producto" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="{DynamicResource InputBackground}" Margin="30,0,30,0"/>

        <!-- LISTA DE PRODUCTOS -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15,10,0,30">
            <ItemsControl x:Name="ProductList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource CardBackground}" Width="205" Height="260" CornerRadius="16" Margin="0,0,12,20" BorderThickness="1" BorderBrush="Transparent">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.05" Color="Black"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" CornerRadius="16,16,0,0" ClipToBounds="True" Background="#EEEEEE">
                                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                                </Border>

                                <Grid Grid.Row="1" Margin="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextPrimary}" TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Grid.Row="1" Text="{Binding Ingredients}" FontSize="11" Foreground="{DynamicResource TextSecondary}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" VerticalAlignment="Top"/>

                                    <Grid Grid.Row="2" VerticalAlignment="Bottom">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Price}" FontWeight="ExtraBold" FontSize="16" Foreground="{DynamicResource BrandColor}"/>
                                            <TextBlock Text="€" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource BrandColor}" Margin="2,0,0,0"/>
                                        </StackPanel>

                                        <!-- Menú desplegable -->
                                        <ToggleButton Style="{StaticResource BtnManageStyle}" HorizontalAlignment="Right" 
                                                      Tag="{Binding Id}"
                                                      Click="BtnOpciones_Click">

                                            <ToggleButton.ContextMenu>
                                                <ContextMenu Style="{StaticResource MobileContextMenuStyle}">

                                                    <MenuItem Header="Ver detalle" Click="OpVer_Click" Style="{StaticResource MobileMenuItemStyle}" Tag="{Binding Id}">
                                                        <MenuItem.Icon>
                                                            <Path Data="{StaticResource IconEye}" Fill="#0288D1" Width="14" Height="14" Stretch="Uniform"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>

                                                    <MenuItem Header="Editar" Click="OpEditar_Click" Style="{StaticResource MobileMenuItemStyle}" Tag="{Binding Id}">
                                                        <MenuItem.Icon>
                                                            <Path Data="{StaticResource IconPencil}" Fill="#FFA000" Width="14" Height="14" Stretch="Uniform"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>

                                                    <Separator Background="#EEEEEE" Margin="5,2"/>

                                                    <MenuItem Header="Eliminar" Click="OpEliminar_Click" Style="{StaticResource MobileMenuItemStyle}" Tag="{Binding Id}">
                                                        <MenuItem.Icon>
                                                            <Path Data="{StaticResource IconTrash}" Fill="#D32F2F" Width="14" Height="14" Stretch="Uniform"/>
                                                        </MenuItem.Icon>
                                                        <MenuItem.Foreground>
                                                            <SolidColorBrush Color="#D32F2F"/>
                                                        </MenuItem.Foreground>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </ToggleButton.ContextMenu>
                                        </ToggleButton>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>